{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "启动程序",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ng",
      "args": [
        "serve", "--port", "4211"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "打包程序",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ng",
      "args": [
        "build", "-prod"//, "--aot"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "ng lint",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/ng",
      "args": [
        "lint"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "lite server",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/lite-server",
      "args": [
        "-c", "${workspaceRoot}/bs-config.json"
      ]
    }
  ]
}
